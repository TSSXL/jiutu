.scCon{
  width:100%;
  display: flex;
  flex-direction: column;
  font-size: 62.5%;
}
.tab{
  width:100%;
  height:100rpx;
  display: flex;
  flex-direction: row;
  background-color: #F7F7F7;
  border-bottom: 1px solid rgb(240, 235, 235);
}
.tab text{
  width:33.3%;
  height:100%;
color:#262626;
text-align: center;
line-height: 50px;
letter-spacing: 1.5px;
}
.item{
  width:100%;
  height:200rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid rgb(240, 235, 235);
}
.item image{
  height:160rpx;
  margin-top: 20rpx;
  width:160rpx;
  border-radius: 50%;
}
.twoText{
  width:70%;
  height:100%;
  display: flex;
  flex-direction: column;
  margin-left: 1%;
}
.name{
  font-size: 1.2em;
  font-weight: bolder;
  letter-spacing: 3rpx;
  color:#262626;
  margin-top: 11%;
}
.con{
  color:#808080;
  font-size: 1.1em;
  margin-top: 2%;
  letter-spacing: 3rpx;
}