.shop{
  width:100%;
  display: flex;
  flex-direction: column;
  font-size: 62.5%;
}
.phone{
  display: block;
  position: fixed;
  width:100%;
  text-align: center;
  font-size: 1.2em;
  color:#ffffff;
  bottom: 0;
  height:60rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  line-height: 30px;
  background-color: #86C166;
}
.head{
  width:100%;
  display: flex;
  flex-direction: row;
  height:100rpx;
 border-bottom: 1px solid #CCCCCC;
}
.head text{
  line-height: 100rpx;
}
.t{
  width:25%;
  text-align: center;
}
.s{
  color:#CCCCCC;
}
.price image{
 width:50rpx;
height:50rpx;
position:absolute;
margin-top:29rpx;
}
.p{
  margin-left: -1rem;
}
.main{
  width:100%;
  display: flex;
  flex-direction: column;
  padding-bottom: 71rpx;
}
.mainItem{
  width:100%;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #e6e6e6;
  padding-top: 20rpx;
  padding-bottom: 30rpx;
}
.firstImg{
  height:190rpx;
  width:190rpx;
  margin-left: 5%;
  border: 1px solid #e6e6e6;
  margin-top: 17rpx;
}
.info{
  display: flex;
  flex-direction: column;
  width:44%;
  height:100%;
  margin-left: 4%;
}
.ti{
  color:#262626;
  font-size: 1.1em;
  margin-top: 10rpx;
  overflow:hidden;
text-overflow:ellipsis;
display:-webkit-box;
-webkit-line-clamp:1;
-webkit-box-orient:vertical;
letter-spacing: 1px;
}
.m{
  font-size: 1.3em;
  color:#FF5555;
  margin-top: 50rpx;
  font-weight: bold;
}
.pr{
  font-size: 1.2em;
  color:#808080;
  margin-top: 36rpx;
}
.xl{
  display: flex;
  flex-direction: row;
  position: absolute;
  right:4%;
  margin-top: 100rpx;
}
.xl image{
  height:45rpx;
  width:45rpx;
  margin-right: 5rpx;
  margin-top: -5rpx;
}
.xl text{
  color:#FF5555;
  font-weight: bolder;
  font-size: 1.2em;
}