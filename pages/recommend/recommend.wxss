/* pages/recommend/recommend.wxss */
.recommend{
    width:100%;
    font-size: 62.5%;
}
.head{
  width:100%;
  position: absolute;
  top:0;
  display: flex;
  flex-direction: row;
  padding-left: 10rpx;
  background-color: #86C166;
  padding-bottom: 20rpx;
}
.head image{
  height:80rpx;
  width:80rpx;
  margin-left: 10rpx;
  margin-top: 5rpx;
}
.head input{
  width:63%;
  padding-left: 20px;
  padding-right: 20px;
  border-radius: 30px;
  height:70rpx;
  margin-top: 10rpx;
  background-color: rgba(255, 255, 255, 0.849);
  color:#808080;
}
.main{
  width:100%;
  background-color: #F7F7F7;
  display: flex;
  flex-direction: row;
  margin-top: 2.7rem;
}
.left{
  width:18%;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}
.nav{
  height:100rpx;
  width:100%;
  background-color: white;
  font-family: FZLTHJW--GB1-0;
  text-align: center;
  color:#262626;
  line-height: 100rpx;
  border: 1px solid #EFEFEF;
  letter-spacing:2px;
}
.brand{
  height:80rpx;
  line-height: 80rpx;
}
.right{
  width:80%;
  margin-left: 1%;
    margin-top: 10rpx;
}
.goods{
  width:45%;
  height:370rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-top: 4%;
  margin-left: 3.5%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  position: relative;
  float: left;
}
.goods text{
  color:#FF5555;
  font-family: FZLTHJW--GB1-0;
  letter-spacing: 1px;
}
.Gimage{
  width:100%;
  height:260rpx;
}
.info{
  width:80%;
  display: flex;
  flex-direction: row;
  padding-left: 8%;
  position: absolute;
  bottom: 20rpx;
}
.title{
  width:80%;
  color:#262626 !important;
  padding-left: 10%;
   overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.Gimage image{
  width:80%;
  height:80%;
  margin-left: 10%;
  margin-top:5%;
}
.sales{
  height:30%;
  width:100%;
  display: flex;
  flex-direction: row-reverse;
}
.sales image{
  width:45rpx;
  height:45rpx;
  margin-right: 5rpx;
  margin-top: -5rpx;
}
.two{
  flex-direction: column;
  margin-top: 40rpx;
}
.name{
  color:#4D4D4D;
  font-size: 1.3em;
  margin-left: 0.5rem;
}
.g{
 width:100%;
 display: flex;
 flex-direction: row;
 flex-wrap: wrap;
}
.goodsTwo{
  width:30%;
  height:235rpx;
  margin-left: 2.5%;
  padding-bottom: 20rpx;
}
.GjTwo image{
  width:90%;
  height:90%;
  margin-left: 5%;
  margin-top: 5%;
}
.titleTwo{
  text-align: center;
  text-indent: 0;
}
.GjTwo{
  height:200rpx;
}