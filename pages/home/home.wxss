}
.hw{
  width:100%;
  height:5.5rem;
  background-color: #f7f7f7;
}
.hw image{
  width:95%;
  height:4.6rem;
  margin-left: 2.5%;
  margin-top: 0.5rem;
}
.size{
  width:100%;
  height:280rpx;
}
.wz{
  width:100%;
  height:2rem;
  margin-top: 0.5rem;
}
.wz text{
  font-size: 1.2em;
  line-height: 2rem;
  margin-left: 3.5%;
  color:#262626;
}
.wzRight{
  float: right;
  margin-right: 2.5%;
}
.info{
  margin-top: 0.5rem;
  width:100%;
  display: flex;
  flex-direction: row;
}
.ppImage{
 height:150rpx;
 border: 1px solid #E6E6E6;
 width:20%;
 margin-left: 3.6%;
 margin-top: 0.3rem;
}
.recommendGoods{
  width:100%;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
  padding-bottom: 120rpx;
}
.recommendImage{
width:38%;
height:2.4rem;
margin-left: 30%;
margin-top: 2.5%;
}
.goods{
  width:100%;
  display:flex;
  flex-direction: row;  
  flex-wrap: wrap;
}
.goodsInfo{
  width:44%;
  background-color: white;
  margin-left: 4%;
  margin-top: 5%;
  display: flex;
  flex-direction: column;
  padding-bottom: 25rpx;
}
.goodsInfo image{
  width:80%;
  margin-top: 10%;
  margin-left: 10%;
  padding-bottom: 30rpx;
  height:240rpx;
}
.goodsXq{
  width:80%;
  margin-left: 10%;
}
.title{
  color:#262626;
   overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  letter-spacing: 1px;
}
.goodsNum{
  margin-top: 5%;
  display: flex;
  flex-direction: row;
  width:100%;
  position: relative;
}
.price,.saleNum{
  color:#FF5555;
  font-weight: bolder;
  margin-top: 3rpx;
}
.rightInfo{
  display: flex;
  flex-direction: row-reverse;
  position: absolute;
  right: 6rpx;
  width:50%;
}
.rightInfo image{
  height:45rpx;
  width:45rpx;
  margin-top: -3rpx;
  margin-right: 5rpx;
  padding-bottom: 0 !important;
}
