.main{
  width:100%;
  display: flex;
  flex-direction: column;
  font-size: 62.5%;
}
.header{
  width:100%;
  height:50rpx;
  background-color: #86C166;
  text-align: center;
  text-indent: 74%;
  font-size: 1.2em;
color:white;
letter-spacing: 2px;
}
.mainItem{
  width:100%;
  height:170rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #e6e6e6;
  padding-top: 20rpx;
  padding-bottom: 30rpx;
}
.firstImg{
  height:100%;
  width:170rpx;
  margin-left: 5%;
  border: 1px solid #e6e6e6;
}
.info{
  display: flex;
  flex-direction: column;
  width:44%;
  height:100%;
  margin-left: 4%;
  position: relative;
}
.ti{
  color:#262626;
  font-size: 1.1em;
  margin-top: 10rpx;
  overflow:hidden;
text-overflow:ellipsis;
display:-webkit-box;
-webkit-line-clamp:2;
-webkit-box-orient:vertical;
letter-spacing: 1px;
}
.m{
  font-size: 1.3em;
  color:#FF5555;
  margin-top: 25rpx;
  font-weight: bold;
  position: absolute;
  bottom:0;
}
.xl{
  display: flex;
  flex-direction: row;
  position: absolute;
  right:4%;
  margin-top: 80rpx;
}
.xl image{
  height:40rpx;
  width:40rpx;
  margin-right: 5rpx;
}
.xl text{
  color:#FF5555;
  font-weight: bolder;
  margin-top: 5rpx;
}
.red{
  position: absolute;
  right:7%;
  margin-top: 80rpx;
  width:10%;
}
.red image{
  height:60rpx;
  width:60rpx;
}